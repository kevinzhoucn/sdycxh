= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :category_id
    = f.select :category_id, @categories.map{ |c| [c.name, c.id] }, prompt: "Select a category"
  .field
    = f.label :sub_category_id
    = f.select :sub_category_id, @sub_categories.map{ |c| [c.name, c.id] }, prompt: "Select a Sub Category"
  .field
    = f.label :published
    = f.check_box :published
  .actions
    = f.submit 'Save'
